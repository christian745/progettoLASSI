<!-- le modifiche a questa pagina sono analoghe a quelle del sign up e sign out (guarda le route per trovarli) -->
<h2 style="text-align:center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="registrazione text-center">
  <div class="field mb-3">
    <!-- <%= f.label :email %><br/> -->
    <%= f.email_field :email, autocomplete: "email",:placeholder => 'email', :style => 'border-style:none; border-bottom:1px solid; border-color:green'  %>
  </div>

  <div class="field mb-3">
    <!-- <%= f.label :password %><br/>  -->
    <%= f.password_field :password, autocomplete: "current-password",:placeholder => 'password', :style => 'border-style:none; border-bottom:1px solid; border-color:green'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , :class => 'btn btn-lg btn-outline-success mt-3 ' %>
  </div>
  </div>
<% end %>

