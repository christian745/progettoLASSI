<!-- path che porta al controller callback che gestisce i dati che arrivano da google-->
<h2 class="text-center">Registrazione tramite email</h2>
<p class="text-right"><%= link_to "registrazione tramite Google", user_google_oauth2_omniauth_authorize_path, :class => 'btn btn-sm btn-outline-primary' %></p>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <h4 class="text-dark">Nome</h4>
    <small>*obbligatorio</small>
    <%= f.text_field :name, autocomplete: "first-name", :placeholder => "Piero", :class => 'form-control'%>
  </div>
  <hr>
  <div class="form-group">
    <h4 class="text-dark">Cognome</h4>
    <small>*obbligatorio</small>
    <%= f.text_field :surname, autocomplete: "family-name", :placeholder => "Pompiero", :class => 'form-control'%>
  </div>
  <hr>
  <div class="form-group">
    <h4 class="text-dark">Email</h4>
    <small>*obbligatorio</small>
    <%= f.text_field :email, autocomplete: "email", :placeholder => "piero@pompiero.com", :class => 'form-control'%>
  </div>
  <hr>
  <div class="form-group">
    <h4 class="text-dark">Indirizzo</h4>
    <%= f.text_field :address, autocomplete: "address", :placeholder => "Via Roma, 32", :class => 'form-control'%>
  </div>
  <hr>
  <div class="form-group">
    <h4 class="text-dark">Sesso</h4>
    <%= f.radio_button :gender, 'male', :id => 'uomo', :checked => true%> <label for="uomo">Uomo</label>
    <br>
    <%= f.radio_button :gender, 'female', :id => 'donna' %> <label for="donna">Donna</label>
  </div>
  <hr>
  <div class="form-group">
    <h4 class="text-dark">Password</h4>
    <small>*obbligatorio</small>
    <%= f.password_field :password, autocomplete: "new-password",:placeholder => 'Inserisci password (minimo 6 caratteri)', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <h4 class="text-dark">Reinserisci la password</h4>
    <small>*obbligatorio</small>
    <%= f.password_field :password, autocomplete: "new-password",:placeholder => 'Inserisci password (minimo 6 caratteri)', :class => 'form-control' %>
  </div>
  <hr>
  <%= f.submit "Registrati" , :class => 'btn btn-outline-primary' %>
<% end %>

<br><br>

