<h1  class="text-center">Lista consigli</h1>
<br>
<div>
    <span class="input-group float-left">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">
                <svg width="25px" height="25px" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                    <path fill-rule="evenodd"
                        d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                </svg>
            </span>
        </div>
        <input id="search" type="text" placeholder="Cerca consigli" size=30 onkeyup="searchTip()">
    </span>
    <a type="button" class="btn btn-outline-primary float-right" href=<%= new_tip_path %> >Aggiungi un consiglio</a>
</div>
<br>
<table id="myTable" class="table table-striped border">
    <thead class="thead-dark">
        <th>Titolo</th>
        <th>Categoria</th>
        <th>Creato da</th>
        <th>Dettagli</th>
    </thead>
    <tbody id='myContent'>
        <% @tips.each do |tip| %>
        <tr>
            <td><h5><%= tip.titolo %></h5></td>
            <td><%= tip.categoria %></td>
            <% if tip.user%>
                <td><%= tip.user.name %> <%= tip.user.surname %> </td>
            <% else %>
                <td> Utente non pi√π attivo </td>
            <% end %>
            <td><%= link_to("Vai al contenuto", tip_path(tip))%></td>
        </tr>
        <% end %>
    </tbody>
    <br>
</table>