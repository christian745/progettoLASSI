<!-- perche questi bottoni funzionino dobbiamo definire le funzioni edit e destroy nel controller-->
<% if(current_user==@schedule.user || current_user.admin) %>                    <!--mostra il tasto per eliminare la scheda e quello per editarla solo sulle schede create dall utente attuale e all'admin-->
<%= link_to 'Edit This Schedule', edit_schedule_path, :class => 'btn btn-outline-secondary'%>
<%= link_to 'Delete This Schedule', schedule_path,
                                   method: :delete,   
                                   data: {confirm: 'Are You Sure?'},
                                    :class => 'btn btn-outline-danger'%>
<% else %>
<button class='btn btn-outline-secondary disabled'>only owner and admin can edit this</button>
<button class='btn btn-outline-danger disabled'>only owner and admin can delete this</button>
<% end %>

